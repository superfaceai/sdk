{
  "name": "superface",
  "version": "1.0.0",
  "description": "Connecting Agents to Apps",
  "author": "Superface Team <hello@superface.ai>",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "exports": {
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "require": "./dist/sdk/index.js",
      "import": "./dist/sdk/index.mjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "tsup": [
    {
      "entry": [
        "src/sdk/index.ts"
      ],
      "outDir": "dist/sdk",
      "format": [
        "cjs",
        "esm"
      ],
      "dts": true,
      "sourcemap": true
    }
  ],
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
